doctype
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="description" content="#{introduction}")
		title #{name} &mdash; #{tagline}
		link(rel="stylesheet" href=(environment == "production" ? "/v2/css/main.css" : "/css/main.css"))
	body
		.container
			.row
				.col-xs-12
					!= partial("_partials/header")
					!= yield
		!= partial("_partials/footer")
		script(src=(environment == "production" ? "/v2/js/app.js" : "/js/app.js"))
